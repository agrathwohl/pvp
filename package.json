{
  "name": "@agrathwohl/pvp",
  "version": "0.1.5",
  "description": "Pair Vibecoding Protocol - Multiplayer human-AI collaboration with approval gates and decision tracking",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./protocol": {
      "types": "./dist/protocol/index.d.ts",
      "import": "./dist/protocol/index.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.js"
    },
    "./agent": {
      "types": "./dist/agent/index.d.ts",
      "import": "./dist/agent/index.js"
    },
    "./tui": {
      "types": "./dist/tui/index.d.ts",
      "import": "./dist/tui/index.js"
    },
    "./transports": {
      "types": "./dist/transports/index.d.ts",
      "import": "./dist/transports/index.js"
    },
    "./git-hooks": {
      "types": "./dist/git-hooks/bridge/index.d.ts",
      "import": "./dist/git-hooks/bridge/index.js"
    }
  },
  "bin": {
    "pvp": "./bin/pvp.js",
    "pvp-server": "./bin/pvp-server.js",
    "pvp-tui": "./bin/pvp-tui.js",
    "pvp-agent": "./bin/pvp-agent.js"
  },
  "files": [
    "dist",
    "bin",
    "src/git-hooks/hooks",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "prepare": "[ -d node_modules/typescript ] && npx tsc || echo 'Skipping build (using pre-built dist)'",
    "prepublishOnly": "npm run clean && npm run build && npm run test",
    "server": "tsx src/server/index.ts",
    "tui": "tsx src/tui/index.ts",
    "agent": "bun run src/agent/index.ts",
    "agent:remote": "bun run src/agent/index.ts --server wss://ws.pvp.codes --local",
    "dev": "tsx watch src/server/index.ts",
    "test": "vitest run",
    "deploy": "ssh -i ~/.pem/LightsailDefaultKey-us-east-2.pem ubuntu@3.128.173.51 'cd ~/pvp && git pull && ~/.bun/bin/bun install --ignore-scripts && ./node_modules/.bin/tsc && pm2 restart pvp-server'"
  },
  "keywords": [
    "ai",
    "llm",
    "claude",
    "anthropic",
    "pair-programming",
    "collaboration",
    "multiplayer",
    "approval-gates",
    "decision-tracking",
    "git-hooks",
    "mcp",
    "tui"
  ],
  "author": "gwohl",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gwohl/pvp.git"
  },
  "bugs": {
    "url": "https://github.com/gwohl/pvp/issues"
  },
  "homepage": "https://github.com/gwohl/pvp#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "commander": "^12.0.0",
    "ink": "^4.4.1",
    "ink-text-input": "^5.0.1",
    "pino": "^8.19.0",
    "pino-pretty": "^10.3.1",
    "react": "^18.2.0",
    "shell-quote": "^1.8.3",
    "ulid": "^2.3.0",
    "ws": "^8.16.0",
    "zod": "^3.22.4",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "@types/shell-quote": "^1.7.5",
    "@types/ws": "^8.5.10",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  }
}
